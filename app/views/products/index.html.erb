      <% @products.each do |product| %>
        <div class="col-lg-4">
          <div class="card m-2">
            <%= link_to "/shoppings/new?product_id=#{product.id}", class:"product-link" do %>
              <div class="ratio ratio-1x1">
                <%= image_tag(product.image, class: "card-img-top object-fit-cover image",style: "transform=''") %>
              </div>
            <% end %>
            <p> Produit : <%= product.name %> </p>
            <p><%= if product.stock > 0
            "Stock : #{product.stock} restants"
            else
            "Rupture de stock" end %></p>
            <p> Prix : <%= product.price %> â‚¬ </p>

            <p>
              <%= link_to "Show this product", product %>
              
            </p>
          </div>
        </div>
          <% end %>
    </div>
    </div>
  </div>
</div>
