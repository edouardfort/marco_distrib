<p style="color: green"><%= notice %></p>

<%= render @product %>

<div class="container">


  <div class="text-center m-4">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-success" %>
  </div>

  <div class="text-center m-4">
  <%= link_to "Back to products", products_path, class: "btn btn-warning" %>
  </div>

  <div class="text-center m-4">
  <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
  </div>



</div>
